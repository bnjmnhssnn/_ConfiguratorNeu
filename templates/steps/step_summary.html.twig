{% block step_summary %}
    <div 
        class="configurator-step-wrapper">
        {% include "partials/error_msg.html.twig" %}
        <form 
            class="configurator-step-form"
            method="post"
            action="{{ configurator.post_route }}">
            <input type="hidden" name="step_id" value="{{ configurator.step_id }}">
            {% include "partials/step_indicator.html.twig" %}
            <h3>{{ configurator.title }}</h3>
            <p>{{ configurator.paragraph }}</p>
            <table class="configurator-text-input-table">
                <tr>
                    <td class="label">{{ configurator.email_label }}</td>
                    <td>
                        <input type="email" name="email">
                    </td>
                </tr>
                <tr>
                    <td class="label">{{ configurator.contact_label }}</td>
                    <td>
                        <input type="text" name="contact">
                    </td>
                </tr>
                <tr>
                    <td class="label">{{ configurator.schoolname_label }}</td>
                    <td>
                        <input type="text" name="school_name">
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input 
                            type="textarea" 
                            name="free_text"
                            placeholder="{{ configurator.freetext_label }}"
                            >
                    </td>
                </tr>


            </table>
            <div class="configurator-btn-wrapper group">
                <input 
                    type="submit" 
                    name="action_back"
                    class="configurator-step-btn back-btn" 
                    value="ZurÃ¼ck" />
                <input 
                    type="submit" 
                    name="action_confirm" 
                    class="configurator-step-btn confirm-btn final-btn" 
                    value="Anfrage senden" />
            </div>
        </form>
    </div>
{% endblock %}