{% block step_school_info %}
    <div 
        class="configurator-step-wrapper">
        <form 
            class="configurator-step-form"
            method="post"
            action="{{ configurator.post_route }}">
            <input type="hidden" name="step_id" value="{{ configurator.step_id }}">
            {% include "partials/step_indicator.html.twig" %}
            <h3>{{ configurator.title }}</h3>
            <p>{{ configurator.paragraph }}</p>
            <fieldset>
                <table class="configurator-choice-table">
                    <tr>
                        <th class="name-cell" colspan="2">{{ configurator.input_schooltype.title }}</th>
                        <th class="price-cell">Preis</th>
                        <th class="price-info-cell" >Abrechnung</th>
                    </tr>
                    {% for option in configurator.input_schooltype.options %} 
                        <tr>
                            <td class="input-cell">
                                <input 
                                    type="radio" 
                                    name="schooltype" 
                                    value="{{option.id}}">
                            </td>
                            <td class="name-cell">{{ option.name }}</td>
                            <td class="price-cell">{{ option.price.value }} €</td>
                            <td class="price-info-cell m-large">{{ option.price.info }}</td>
                        </tr>
                    {% endfor %}
                </table>
                {{ configurator.input_student_count.label }}
                <input type="number" name="student_count">
            </fieldset>
            <div class="configurator-btn-wrapper group">
                <input 
                    type="submit" 
                    name="action_confirm" 
                    class="configurator-step-btn confirm-btn" 
                    value="Bestätigen" />
            </div>
        </form>
    </div>
{% endblock %}