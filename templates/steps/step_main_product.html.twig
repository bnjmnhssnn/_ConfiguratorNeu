{% block step_main_product %}
    <div 
        class="configurator-step-wrapper">
        <form 
            class="configurator-step-form"
            method="post"
            action="{{ configurator.post_route }}">
            <input type="hidden" name="step_id" value="{{ configurator.step_id }}">
            <h5>{{ configurator.title }}</h5>
            <p>{{ configurator.paragraph }}</p>
            <fieldset>
                {{ configurator.input_hardware.title }}
                <table class="configurator-choice-table">
                {% for option in configurator.input_hardware.options %} 
                    <tr>
                        <td class="input-cell">
                            <input 
                                type="radio" 
                                name="main_product" 
                                value="{{option.id}}">
                        </td>
                        <td class="name-cell">{{ option.name }}</td>
                        <td class="name-price-info">{{ option.price_info }}</td>
                        <td class="name-price">{{ option.price }} €</td>
                    </tr>
                {% endfor %}
                </table>
                {{ configurator.input_cloud.title }}
                <table class="configurator-choice-table">
                {% for option in configurator.input_cloud.options %} 
                    <tr>
                        <td class="input-cell">
                            <input 
                                type="radio" 
                                name="main_product" 
                                value="{{option.id}}">
                        </td>
                        <td class="name-cell">{{ option.name }}</td>
                        <td class="name-price-info">{{ option.price_info }}</td>
                        <td class="name-price">{{ option.price }} €</td>
                    </tr>
                {% endfor %}
                </table>
                
            </fieldset>
            <input type="submit" name="action_back" value="Zurück" />
            <input type="submit" name="action_confirm" value="Bestätigen" />
        </form>
    </div>
{% endblock %}